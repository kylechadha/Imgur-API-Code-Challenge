<% if params[:search] and params[:search] != "" %>

  <%= @results %><br><br>

  <%#= @images %>
  <ul class="large-block-grid-4">
    <% @images.each do |hashtag, image_urls| %>
      <% image_urls.each do |image_url| %>
        <li>
          <%= link_to(image_url, class: "fancybox", rel: "group") do %>
            <div class="image-box #{hashtag}" style="background-image: url('<%= image_url %>')" title="<%= hashtag %>"><%#= image_tag image_url, class: "image-box #{hashtag}", title: "#{hashtag}" %></div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>

<% end %>
